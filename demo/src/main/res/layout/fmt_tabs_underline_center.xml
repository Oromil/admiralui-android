<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.admiral.uikit.layout.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.admiral.uikit.components.appbar.Appbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:admiralTitleText="@string/tabs_underline_center_title" />

        <com.admiral.uikit.components.tabs.StandardTabs
            android:id="@+id/tabsState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/defaultTab">

            <com.admiral.uikit.components.tabs.StandardTab
                android:id="@+id/defaultTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs_default" />

            <com.admiral.uikit.components.tabs.StandardTab
                android:id="@+id/disabledTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs_disabled" />

        </com.admiral.uikit.components.tabs.StandardTabs>

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x9"
            android:text="@string/tabs_two_controls"
            app:admiralTextColorNormalEnabledPalette="textSecondary"
            app:admiralTextStyle="headline" />

        <com.admiral.uikit.components.tabs.UnderlineSliderTabs
            android:id="@+id/tabsTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/tabOne2">

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabOne2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_one"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabTwo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_two"
                app:admiralUnderlinePadding="2dp" />

        </com.admiral.uikit.components.tabs.UnderlineSliderTabs>

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x9"
            android:text="@string/tabs_three_controls"
            app:admiralTextColorNormalEnabledPalette="textSecondary"
            app:admiralTextStyle="headline" />

        <com.admiral.uikit.components.tabs.UnderlineSliderTabs
            android:id="@+id/tabsThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/tabOne3">

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabOne3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_one"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabTwo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_two"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabThree3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_three"
                app:admiralUnderlinePadding="2dp" />

        </com.admiral.uikit.components.tabs.UnderlineSliderTabs>

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x9"
            android:text="@string/tabs_four_controls"
            app:admiralTextColorNormalEnabledPalette="textSecondary"
            app:admiralTextStyle="headline" />

        <com.admiral.uikit.components.tabs.UnderlineSliderTabs
            android:id="@+id/tabsFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/tabOne4">

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabOne4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_one"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabTwo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_two"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabThree4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_three"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabFour4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_four"
                app:admiralUnderlinePadding="2dp" />

        </com.admiral.uikit.components.tabs.UnderlineSliderTabs>

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x9"
            android:text="@string/tabs_five_controls"
            app:admiralTextColorNormalEnabledPalette="textSecondary"
            app:admiralTextStyle="headline" />

        <com.admiral.uikit.components.tabs.UnderlineSliderTabs
            android:id="@+id/tabsFive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/tabOne5">

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabOne5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_one"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabTwo5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_two"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabThree5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_three"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabFour5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_four"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabFive5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralText="@string/tabs_example_five"
                app:admiralUnderlinePadding="2dp" />

        </com.admiral.uikit.components.tabs.UnderlineSliderTabs>

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x9"
            android:text="@string/tabs_notifications"
            app:admiralTextColorNormalEnabledPalette="textSecondary"
            app:admiralTextStyle="headline" />

        <com.admiral.uikit.components.tabs.UnderlineSliderTabs
            android:id="@+id/tabsNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/tabNotification">

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralIsBadgeVisible="true"
                app:admiralText="@string/tabs_example_one"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabNotification2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralIsBadgeVisible="true"
                app:admiralText="@string/tabs_example_two"
                app:admiralUnderlinePadding="2dp" />

            <com.admiral.uikit.components.tabs.UnderlineSliderTab
                android:id="@+id/tabNotificationAdditional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:admiralIsBadgeVisible="true"
                app:admiralText="@string/tabs_example_three"
                app:admiralUnderlinePadding="2dp" />

        </com.admiral.uikit.components.tabs.UnderlineSliderTabs>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/module_x24" />

    </com.admiral.uikit.layout.LinearLayout>

</ScrollView>
