<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <com.admiral.uikit.layout.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.admiral.uikit.components.appbar.Appbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:admiralMenuText="Пропустить"
            app:admiralTitleTextGravity="end" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/admiralOnboardingImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/module_x8"
            app:srcCompat="@drawable/ic_onboarding_1" />

        <com.admiral.uikit.components.text.TextView
            android:id="@+id/admiralOnboardingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="@dimen/module_x4"
            android:gravity="center"
            android:text="@string/pop_up_example_title"
            app:admiralTextStyle="title1" />

        <com.admiral.uikit.components.text.TextView
            android:id="@+id/admiralOnboardintDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x4"
            android:layout_marginEnd="@dimen/module_x4"
            android:gravity="center"
            android:text="@string/lorem_ipsum"
            app:admiralTextColorNormalEnabledPalette="textSecondary"
            app:admiralTextStyle="body2" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.admiral.uikit.components.control.CirclePageControl
            android:id="@+id/admiralOnboardingProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:admiralProgress="30"
            android:layout_marginBottom="58dp" />

    </com.admiral.uikit.layout.LinearLayout>

</ScrollView>
